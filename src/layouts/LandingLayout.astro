---
import "../styles/landing-base.css";

interface Props {
  title: string;
  description: string;
  theme?: "rock" | "minimal" | "acoustic" | "urban" | "classical" | "indie";
  ogImage?: string;
  keywords?: string[];
}

const {
  title,
  description,
  theme = "rock",
  ogImage = "/landing/images/og-image.jpg",
  keywords = [],
} = Astro.props;

const themeClass = `theme-${theme}`;
---

<!doctype html>
<html lang="en" class={themeClass}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>

    <!-- Structured Data for SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "MusicGroup",
        "name": "{title}",
        "description": "{description}"
      }
    </script>
  </head>
  <body class="min-h-screen bg-theme-dark text-theme-light antialiased">
    <slot />

    <!-- Smooth scroll behavior -->
    <script>
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener(
          "click",
          function (this: HTMLAnchorElement, e: Event) {
            const href = this.getAttribute("href");
            if (href && href.length > 1) {
              e.preventDefault();
              const target = document.querySelector(href);
              if (target) {
                target.scrollIntoView({
                  behavior: "smooth",
                  block: "start",
                });
              }
            }
          },
        );
      });
    </script>
  </body>
</html>

<style is:global>
  /* Theme CSS Variables */
  .theme-rock {
    --color-primary: #dc2626;
    --color-secondary: #991b1b;
    --color-dark: #0a0a0a;
    --color-light: #fafafa;
    --color-accent: #ef4444;
  }

  .theme-minimal {
    --color-primary: #ffffff;
    --color-secondary: #a3a3a3;
    --color-dark: #000000;
    --color-light: #f5f5f5;
    --color-accent: #737373;
  }

  .theme-acoustic {
    --color-primary: #d97706;
    --color-secondary: #92400e;
    --color-dark: #1c1917;
    --color-light: #fef3c7;
    --color-accent: #f59e0b;
  }

  .theme-urban {
    --color-primary: #8b5cf6;
    --color-secondary: #06b6d4;
    --color-dark: #0f0f23;
    --color-light: #f0f9ff;
    --color-accent: #a78bfa;
  }

  .theme-classical {
    --color-primary: #d4af37;
    --color-secondary: #b8860b;
    --color-dark: #1a1a2e;
    --color-light: #fffbeb;
    --color-accent: #fbbf24;
  }

  .theme-indie {
    --color-primary: #f472b6;
    --color-secondary: #a78bfa;
    --color-dark: #1e1e2f;
    --color-light: #fdf2f8;
    --color-accent: #fb7185;
  }

  /* Theme utility classes */
  .bg-theme-dark {
    background-color: var(--color-dark);
  }
  .bg-theme-light {
    background-color: var(--color-light);
  }
  .bg-theme-primary {
    background-color: var(--color-primary);
  }
  .bg-theme-secondary {
    background-color: var(--color-secondary);
  }

  .text-theme-dark {
    color: var(--color-dark);
  }
  .text-theme-light {
    color: var(--color-light);
  }
  .text-theme-primary {
    color: var(--color-primary);
  }
  .text-theme-secondary {
    color: var(--color-secondary);
  }

  .border-theme-primary {
    border-color: var(--color-primary);
  }
  .border-theme-secondary {
    border-color: var(--color-secondary);
  }

  /* Focus states for accessibility */
  *:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
</style>
