---
/**
 * Hero5 - Album-Focused/Classical
 * Large centered artwork with elegant typography
 * Best for: Classical, Jazz, Orchestral, Album releases
 * Conversion focus: Showcase the music/artwork
 */

interface Props {
  artistName: string;
  tagline: string;
  genre?: string;
  ctaText: string;
  ctaUrl: string;
  secondaryCtaText?: string;
  secondaryCtaUrl?: string;
  albumCover: string;
  albumTitle?: string;
}

const {
  artistName,
  tagline,
  genre,
  ctaText,
  ctaUrl,
  secondaryCtaText,
  secondaryCtaUrl,
  albumCover,
  albumTitle,
} = Astro.props;
---

<section
  class="hero-classical relative min-h-screen flex items-center justify-center bg-slate-950 overflow-hidden"
>
  <!-- Radial gradient background -->
  <div
    class="absolute inset-0 bg-gradient-radial from-amber-950/20 via-slate-950 to-slate-950"
  >
  </div>

  <!-- Decorative lines -->
  <div
    class="absolute top-0 left-1/2 w-px h-32 bg-gradient-to-b from-amber-500/50 to-transparent"
  >
  </div>
  <div
    class="absolute bottom-0 left-1/2 w-px h-32 bg-gradient-to-t from-amber-500/50 to-transparent"
  >
  </div>

  <!-- Content -->
  <div class="relative z-10 container-wide py-20">
    <!-- Desktop: Two column layout / Mobile: Centered single column -->
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Text content (on desktop) / Below image (on mobile) -->
      <div class="text-center lg:text-left order-2 lg:order-1">
        <!-- Artist name - Elegant serif -->
        <p
          class="font-display text-amber-500 text-lg tracking-[0.2em] uppercase mb-4 animate-fade-in"
        >
          {artistName}
        </p>

        <!-- Album title -->
        {
          albumTitle && (
            <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl text-amber-50 mb-4 animate-slide-up delay-300">
              {albumTitle}
            </h1>
          )
        }

        <!-- Genre -->
        {
          genre && (
            <p class="text-amber-500/70 text-sm tracking-widest uppercase mb-6 animate-fade-in delay-400">
              {genre}
            </p>
          )
        }

        <!-- Tagline -->
        <p
          class="font-display text-xl text-slate-400 italic max-w-lg mx-auto lg:mx-0 mb-10 animate-fade-in delay-400"
        >
          "{tagline}"
        </p>

        <!-- CTAs -->
        <div
          class="flex flex-col sm:flex-row items-center lg:items-start justify-center lg:justify-start gap-4 animate-slide-up delay-500"
        >
          <a
            href={ctaUrl}
            class="group inline-flex items-center gap-3 px-8 py-4 bg-amber-500 hover:bg-amber-400 text-slate-900 font-semibold rounded-sm transition-all"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"></path>
            </svg>
            <span>{ctaText}</span>
          </a>

          {
            secondaryCtaText && secondaryCtaUrl && (
              <a
                href={secondaryCtaUrl}
                class="inline-flex items-center gap-2 px-8 py-4 border border-amber-500/30 text-amber-500 hover:bg-amber-500/10 font-medium rounded-sm transition-all"
              >
                {secondaryCtaText}
              </a>
            )
          }
        </div>

        <!-- Streaming platforms -->
        <div class="mt-12 animate-fade-in delay-500">
          <p class="text-slate-600 text-xs tracking-widest uppercase mb-4">
            Stream On
          </p>
          <div class="flex items-center justify-center lg:justify-start gap-8">
            <a
              href="#"
              class="text-slate-500 hover:text-amber-500 transition-colors"
            >
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"
                ></path>
              </svg>
            </a>
            <a
              href="#"
              class="text-slate-500 hover:text-amber-500 transition-colors"
            >
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
                ></path>
              </svg>
            </a>
            <a
              href="#"
              class="text-slate-500 hover:text-amber-500 transition-colors"
            >
              <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M12.04 3.5c.59 0 7.54.02 9.34.5a3.02 3.02 0 0 1 2.12 2.15C24 8.05 24 12 24 12v.04c0 .43-.03 4.03-.5 5.8A3.02 3.02 0 0 1 21.38 20c-1.76.48-8.45.5-9.3.51h-.17c-.85 0-7.54-.03-9.29-.5A3.02 3.02 0 0 1 .5 17.84c-.42-1.61-.49-4.7-.5-5.6v-.5c.01-.9.08-3.99.5-5.6a3.02 3.02 0 0 1 2.12-2.14c1.8-.49 8.75-.51 9.34-.51zM9.54 8.4v7.18L15.82 12 9.54 8.41z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Right: Album artwork (on desktop) / First on mobile -->
      <div
        class="relative max-w-md mx-auto lg:max-w-none order-1 lg:order-2 animate-scale-in delay-200"
      >
        <!-- Glow effect behind album -->
        <div class="absolute inset-0 bg-amber-500/20 blur-3xl scale-75"></div>

        <!-- Album frame -->
        <div
          class="relative aspect-square rounded-sm overflow-hidden shadow-2xl shadow-black/50 ring-1 ring-amber-500/20"
        >
          <img
            src={albumCover}
            alt={albumTitle || "Album artwork"}
            class="w-full h-full object-cover"
            loading="eager"
          />

          <!-- Vinyl record peek effect -->
          <div
            class="absolute -right-8 top-1/2 -translate-y-1/2 w-[90%] h-[90%] rounded-full bg-gradient-to-br from-slate-800 to-slate-900 -z-10"
          >
            <div
              class="absolute inset-4 rounded-full border border-slate-700/50"
            >
            </div>
            <div
              class="absolute inset-8 rounded-full border border-slate-700/30"
            >
            </div>
            <div class="absolute inset-[45%] rounded-full bg-amber-500/20">
            </div>
          </div>
        </div>

        <!-- Play button overlay -->
        <button class="absolute inset-0 flex items-center justify-center group">
          <div
            class="w-20 h-20 rounded-full bg-amber-500/90 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 transform scale-90 group-hover:scale-100"
          >
            <svg
              class="w-8 h-8 text-slate-900 ml-1"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path d="M8 5v14l11-7z"></path>
            </svg>
          </div>
        </button>
      </div>
    </div>
  </div>

  <!-- Corner decorations -->
  <div
    class="absolute top-8 left-8 w-16 h-16 border-l border-t border-amber-500/20 hidden lg:block"
  >
  </div>
  <div
    class="absolute top-8 right-8 w-16 h-16 border-r border-t border-amber-500/20 hidden lg:block"
  >
  </div>
  <div
    class="absolute bottom-8 left-8 w-16 h-16 border-l border-b border-amber-500/20 hidden lg:block"
  >
  </div>
  <div
    class="absolute bottom-8 right-8 w-16 h-16 border-r border-b border-amber-500/20 hidden lg:block"
  >
  </div>
</section>

<style>
  .hero-classical {
    --color-primary: #d4af37;
    --color-dark: #1a1a2e;
  }
</style>
