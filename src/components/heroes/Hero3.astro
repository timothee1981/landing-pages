---
/**
 * Hero3 - Split Screen
 * Image on one side, content on the other
 * Best for: Singer-songwriters, Acoustic, Folk artists
 * Conversion focus: Personal connection through imagery
 */

interface Props {
  artistName: string;
  tagline: string;
  genre?: string;
  ctaText: string;
  ctaUrl: string;
  secondaryCtaText?: string;
  secondaryCtaUrl?: string;
  heroImage: string;
  imageAlt?: string;
}

const {
  artistName,
  tagline,
  genre,
  ctaText,
  ctaUrl,
  secondaryCtaText,
  secondaryCtaUrl,
  heroImage,
  imageAlt = artistName,
} = Astro.props;
---

<section class="hero-split min-h-screen bg-stone-900 overflow-x-hidden">
  <div class="grid lg:grid-cols-2 min-h-screen">
    <!-- Image Side -->
    <div class="relative h-[50vh] lg:h-screen order-1 lg:order-2">
      <img
        src={heroImage}
        alt={imageAlt}
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
      />
      <!-- Warm overlay -->
      <div
        class="absolute inset-0 bg-gradient-to-t lg:bg-gradient-to-l from-stone-900/80 via-transparent to-transparent"
      >
      </div>

      <!-- Decorative frame -->
      <div
        class="absolute inset-4 border border-amber-600/20 pointer-events-none hidden lg:block"
      >
      </div>
    </div>

    <!-- Content Side -->
    <div
      class="relative flex items-center order-2 lg:order-1 px-6 sm:px-12 lg:px-16 py-16 lg:py-0 overflow-visible"
    >
      <div class="max-w-lg w-full">
        <!-- Genre badge -->
        {
          genre && (
            <span class="inline-block px-4 py-1 bg-amber-600/20 text-amber-500 text-sm font-medium rounded-full mb-6 animate-fade-in">
              {genre}
            </span>
          )
        }

        <!-- Artist name -->
        <h1
          class="font-display text-4xl sm:text-5xl lg:text-6xl text-amber-50 mb-6 animate-slide-up"
        >
          {artistName}
        </h1>

        <!-- Decorative line -->
        <div class="w-16 h-1 bg-amber-600 mb-6 animate-scale-in delay-200">
        </div>

        <!-- Tagline -->
        <p
          class="text-lg sm:text-xl text-stone-300 leading-relaxed mb-10 animate-fade-in delay-300"
        >
          {tagline}
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 animate-slide-up delay-400">
          <a
            href={ctaUrl}
            class="btn-primary bg-amber-600 hover:bg-amber-500 text-stone-900 shrink-0"
          >
            <svg
              class="w-5 h-5 mr-2 shrink-0"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path d="M8 5v14l11-7z"></path>
            </svg>
            <span class="whitespace-nowrap">{ctaText}</span>
          </a>

          {
            secondaryCtaText && secondaryCtaUrl && (
              <a
                href={secondaryCtaUrl}
                class="btn-secondary border-amber-600/50 text-amber-500 hover:bg-amber-600 hover:text-stone-900 shrink-0"
              >
                <span class="whitespace-nowrap">{secondaryCtaText}</span>
              </a>
            )
          }
        </div>

        <!-- Social proof snippet -->
        <div
          class="mt-12 pt-8 border-t border-stone-700/50 animate-fade-in delay-500"
        >
          <p class="text-stone-500 text-sm italic">
            "Authentic, soulful, and utterly captivating."
          </p>
          <p class="text-amber-600 text-sm mt-1">â€” Folk Radio UK</p>
        </div>
      </div>

      <!-- Decorative background element -->
      <div
        class="absolute -left-20 top-1/4 w-40 h-40 bg-amber-600/5 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute -right-10 bottom-1/4 w-32 h-32 bg-amber-600/5 rounded-full blur-3xl"
      >
      </div>
    </div>
  </div>
</section>

<style>
  .hero-split {
    --color-primary: #d97706;
    --color-dark: #1c1917;
  }
</style>
