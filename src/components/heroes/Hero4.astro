---
/**
 * Hero4 - Urban/Dynamic
 * Animated elements with gradient backgrounds
 * Best for: Hip-hop, R&B, Pop, Urban artists
 * Conversion focus: Energy and modernity
 */

interface Props {
  artistName: string;
  tagline: string;
  genre?: string;
  ctaText: string;
  ctaUrl: string;
  secondaryCtaText?: string;
  secondaryCtaUrl?: string;
  stats?: {
    label: string;
    value: string;
  }[];
}

const {
  artistName,
  tagline,
  genre,
  ctaText,
  ctaUrl,
  secondaryCtaText,
  secondaryCtaUrl,
  stats = [
    { label: "Monthly Listeners", value: "2.5M+" },
    { label: "Streams", value: "500M+" },
    { label: "Followers", value: "1.2M" },
  ],
} = Astro.props;
---

<section
  class="hero-urban relative min-h-screen flex items-center overflow-hidden"
>
  <!-- Animated gradient background -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-violet-950 via-slate-900 to-cyan-950"
  >
    <!-- Animated gradient orbs -->
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-violet-600/30 rounded-full blur-3xl animate-float"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-cyan-500/20 rounded-full blur-3xl animate-float delay-300"
      style="animation-delay: -2s;"
    >
    </div>
    <div
      class="absolute top-1/2 right-1/3 w-64 h-64 bg-fuchsia-500/20 rounded-full blur-3xl animate-float"
      style="animation-delay: -4s;"
    >
    </div>
  </div>

  <!-- Grid pattern overlay -->
  <div
    class="absolute inset-0 opacity-10"
    style="background-image: linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px); background-size: 50px 50px;"
  >
  </div>

  <!-- Content -->
  <div class="relative z-10 container-wide py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text content -->
      <div>
        <!-- Genre badge -->
        {
          genre && (
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/10 mb-8 animate-fade-in">
              <span class="w-2 h-2 bg-cyan-400 rounded-full animate-pulse" />
              <span class="text-sm font-medium text-cyan-300">{genre}</span>
            </div>
          )
        }

        <!-- Artist name with gradient -->
        <h1
          class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold mb-6 animate-slide-up"
        >
          <span
            class="bg-gradient-to-r from-white via-violet-200 to-cyan-300 bg-clip-text text-transparent"
          >
            {artistName}
          </span>
        </h1>

        <!-- Tagline -->
        <p
          class="text-xl sm:text-2xl text-slate-300 max-w-lg mb-10 animate-fade-in delay-200"
        >
          {tagline}
        </p>

        <!-- CTAs -->
        <div class="flex flex-wrap gap-4 animate-slide-up delay-300">
          <a
            href={ctaUrl}
            class="group relative inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-violet-600 to-cyan-500 rounded-full font-semibold text-white overflow-hidden transition-all hover:scale-105 hover:shadow-lg hover:shadow-violet-500/25"
          >
            <span class="relative z-10">{ctaText}</span>
            <svg
              class="w-5 h-5 relative z-10 group-hover:translate-x-1 transition-transform"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
            <!-- Shine effect -->
            <div
              class="absolute inset-0 -translate-x-full group-hover:translate-x-full transition-transform duration-700 bg-gradient-to-r from-transparent via-white/20 to-transparent"
            >
            </div>
          </a>

          {
            secondaryCtaText && secondaryCtaUrl && (
              <a
                href={secondaryCtaUrl}
                class="inline-flex items-center gap-2 px-8 py-4 rounded-full font-semibold text-white border border-white/20 hover:bg-white/10 transition-all"
              >
                {secondaryCtaText}
              </a>
            )
          }
        </div>
      </div>

      <!-- Stats panel -->
      <div class="lg:pl-12 animate-fade-in delay-400">
        <div class="glass rounded-3xl p-8 space-y-6">
          <h3
            class="text-sm uppercase tracking-wider text-violet-300 font-medium"
          >
            Live Stats
          </h3>
          {
            stats.map((stat, index) => (
              <div class="flex items-center justify-between py-4 border-b border-white/10 last:border-0">
                <span class="text-slate-400">{stat.label}</span>
                <span class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-violet-400 to-cyan-400 bg-clip-text text-transparent">
                  {stat.value}
                </span>
              </div>
            ))
          }

          <!-- Streaming platforms -->
          <div class="pt-4">
            <p class="text-xs text-slate-500 mb-3">Available on</p>
            <div class="flex gap-4">
              <div
                class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center"
              >
                <svg
                  class="w-4 h-4 text-green-500"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"
                  ></path>
                </svg>
              </div>
              <div
                class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center"
              >
                <svg
                  class="w-4 h-4 text-pink-500"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M12.04 3.5c.59 0 7.54.02 9.34.5a3.02 3.02 0 0 1 2.12 2.15C24 8.05 24 12 24 12v.04c0 .43-.03 4.03-.5 5.8A3.02 3.02 0 0 1 21.38 20c-1.76.48-8.45.5-9.3.51h-.17c-.85 0-7.54-.03-9.29-.5A3.02 3.02 0 0 1 .5 17.84c-.42-1.61-.49-4.7-.5-5.6v-.5c.01-.9.08-3.99.5-5.6a3.02 3.02 0 0 1 2.12-2.14c1.8-.49 8.75-.51 9.34-.51zM9.54 8.4v7.18L15.82 12 9.54 8.41z"
                  ></path>
                </svg>
              </div>
              <div
                class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center"
              >
                <svg
                  class="w-4 h-4 text-red-500"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.6.11.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative corner elements -->
  <div
    class="absolute top-8 left-8 w-20 h-20 border-l-2 border-t-2 border-violet-500/30"
  >
  </div>
  <div
    class="absolute bottom-8 right-8 w-20 h-20 border-r-2 border-b-2 border-cyan-500/30"
  >
  </div>
</section>

<style>
  .hero-urban {
    --color-primary: #8b5cf6;
    --color-secondary: #06b6d4;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0) translateX(0);
    }
    25% {
      transform: translateY(-20px) translateX(10px);
    }
    50% {
      transform: translateY(0) translateX(20px);
    }
    75% {
      transform: translateY(20px) translateX(10px);
    }
  }
</style>
