---
/**
 * Hero2 - Minimal/Clean
 * Typography-focused with clean lines and whitespace
 * Best for: Electronic, DJ, Ambient, Experimental artists
 * Conversion focus: Clarity and sophistication
 */

interface Props {
  artistName: string;
  tagline: string;
  genre?: string;
  ctaText: string;
  ctaUrl: string;
  secondaryCtaText?: string;
  secondaryCtaUrl?: string;
  artistImage?: string;
}

const {
  artistName,
  tagline,
  genre,
  ctaText,
  ctaUrl,
  secondaryCtaText,
  secondaryCtaUrl,
  artistImage,
} = Astro.props;
---

<section
  class="hero-minimal min-h-screen flex items-center justify-center bg-black text-white"
>
  <div class="container-narrow text-center py-20">
    <!-- Artist image or minimal logo/icon -->
    <div class="mb-12 animate-fade-in">
      {
        artistImage ? (
          <div class="w-32 h-32 sm:w-40 sm:h-40 mx-auto rounded-full overflow-hidden border border-white/20">
            <img
              src={artistImage}
              alt={artistName}
              class="w-full h-full object-cover"
            />
          </div>
        ) : (
          <div class="w-20 h-20 mx-auto border border-white/20 rounded-full flex items-center justify-center">
            <div class="w-3 h-3 bg-white rounded-full animate-pulse" />
          </div>
        )
      }
    </div>

    <!-- Artist name - Large typography -->
    <h1
      class="font-mono text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-light tracking-tighter mb-6 animate-slide-up"
    >
      {artistName.toUpperCase()}
    </h1>

    <!-- Divider line -->
    <div class="w-24 h-px bg-white/30 mx-auto mb-6 animate-scale-in delay-200">
    </div>

    <!-- Genre -->
    {
      genre && (
        <p class="font-mono text-xs tracking-[0.3em] text-white/50 uppercase mb-8 animate-fade-in delay-300">
          {genre}
        </p>
      )
    }

    <!-- Tagline -->
    <p
      class="font-mono text-lg sm:text-xl text-white/70 max-w-lg mx-auto mb-12 animate-fade-in delay-400"
    >
      {tagline}
    </p>

    <!-- CTAs - Clean, understated -->
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-6 animate-slide-up delay-500"
    >
      <a
        href={ctaUrl}
        class="group inline-flex items-center gap-3 px-8 py-4 border border-white text-white font-mono text-sm tracking-wider uppercase transition-all duration-300 hover:bg-white hover:text-black"
      >
        <span>{ctaText}</span>
        <span class="w-4 h-px bg-current group-hover:w-6 transition-all"></span>
      </a>

      {
        secondaryCtaText && secondaryCtaUrl && (
          <a
            href={secondaryCtaUrl}
            class="font-mono text-sm tracking-wider text-white/50 hover:text-white transition-colors underline underline-offset-4"
          >
            {secondaryCtaText}
          </a>
        )
      }
    </div>
  </div>

  <!-- Grid overlay for aesthetic -->
  <div
    class="absolute inset-0 pointer-events-none opacity-[0.02]"
    style="background-image: linear-gradient(white 1px, transparent 1px), linear-gradient(90deg, white 1px, transparent 1px); background-size: 100px 100px;"
  >
  </div>
</section>

<style>
  .hero-minimal {
    position: relative;
    background: linear-gradient(180deg, #000 0%, #0a0a0a 100%);
  }
</style>
