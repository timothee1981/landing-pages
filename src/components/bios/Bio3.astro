---
/**
 * Bio3 - Minimal Paragraph
 * Clean, simple text-focused bio
 * Best for: Singer-songwriters, acoustic artists
 */

interface Props {
  artistName: string;
  bio: string;
  signature?: string;
  location?: string;
  image?: string;
}

const { artistName, bio, signature, location, image } = Astro.props;
---

<section id="bio" class="section bg-stone-900">
  <div class="container-narrow">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Image - circular -->
      {
        image && (
          <div class="mb-10">
            <div class="w-40 h-40 mx-auto rounded-full overflow-hidden ring-4 ring-amber-600/20 ring-offset-4 ring-offset-stone-900">
              <img
                src={image}
                alt={artistName}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        )
      }

      <!-- Section label -->
      <p
        class="text-amber-600 text-sm font-medium tracking-wider uppercase mb-4"
      >
        About the Artist
      </p>

      <!-- Name -->
      <h2 class="font-display text-4xl sm:text-5xl text-amber-50 mb-8">
        {artistName}
      </h2>

      <!-- Location -->
      {
        location && (
          <p class="text-stone-500 text-sm mb-8 flex items-center justify-center gap-2">
            <svg
              class="w-4 h-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
              />
            </svg>
            {location}
          </p>
        )
      }

      <!-- Decorative line -->
      <div class="w-16 h-1 bg-amber-600 mx-auto mb-10"></div>

      <!-- Bio text - elegant typography -->
      <div class="text-lg sm:text-xl text-stone-300 leading-relaxed space-y-6">
        {bio.split("\n\n").map((paragraph) => <p>{paragraph}</p>)}
      </div>

      <!-- Signature -->
      {
        signature && (
          <div class="mt-12">
            <p class="font-display text-2xl text-amber-500 italic">
              {signature}
            </p>
          </div>
        )
      }

      <!-- CTA -->
      <div class="mt-12">
        <a
          href="#contact"
          class="inline-flex items-center gap-2 text-amber-600 hover:text-amber-500 transition-colors"
        >
          <span>Let's connect</span>
          <svg
            class="w-4 h-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
