---
/**
 * Bio1 - Timeline Style
 * Vertical timeline showing artist journey
 * Best for: Artists with rich history, milestones
 */

interface Props {
  artistName: string;
  bio: string;
  milestones?: {
    year: string;
    title: string;
    description: string;
  }[];
  image?: string;
}

const {
  artistName,
  bio,
  milestones = [
    { year: '2018', title: 'The Beginning', description: 'Started creating music in a bedroom studio' },
    { year: '2020', title: 'First Release', description: 'Debut EP reached 1M streams in first month' },
    { year: '2022', title: 'Major Milestone', description: 'Signed to major label, world tour announced' },
    { year: '2024', title: 'Present Day', description: 'Working on highly anticipated third album' }
  ],
  image
} = Astro.props;
---

<section id="bio" class="section bg-gradient-to-b from-black to-zinc-900">
  <div class="container-wide">
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      <!-- Left: Image and intro -->
      <div class="lg:sticky lg:top-24">
        {image && (
          <div class="relative mb-8">
            <div class="absolute -inset-2 bg-gradient-to-br from-red-600/20 to-transparent rounded-lg" />
            <img 
              src={image} 
              alt={artistName}
              class="relative w-full rounded-lg shadow-2xl"
            />
          </div>
        )}
        
        <h2 class="heading-lg text-white mb-6">
          The Story of <span class="text-gradient">{artistName}</span>
        </h2>
        
        <p class="text-body text-zinc-300 mb-6">
          {bio}
        </p>
        
        <a href="#contact" class="btn-secondary">
          Get in Touch
        </a>
      </div>
      
      <!-- Right: Timeline -->
      <div class="max-md:hidden md:relative">
        <!-- Timeline line -->
        <div class="absolute left-4 top-0 bottom-0 w-px bg-gradient-to-b from-red-600 via-red-600/50 to-transparent" />
        
        <div class="space-y-12">
          {milestones.map((milestone, index) => (
            <div class="relative pl-12 animate-on-scroll" style={`animation-delay: ${index * 0.1}s`}>
              <!-- Timeline dot -->
              <div class="absolute left-0 top-1 w-8 h-8 rounded-full bg-zinc-900 border-2 border-red-600 flex items-center justify-center">
                <div class="w-2 h-2 bg-red-600 rounded-full" />
              </div>
              
              <!-- Content -->
              <div class="card">
                <span class="text-red-500 text-sm font-mono">{milestone.year}</span>
                <h3 class="text-xl font-bold text-white mt-2 mb-2">{milestone.title}</h3>
                <p class="text-zinc-400">{milestone.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
