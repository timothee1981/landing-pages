---
/**
 * Release1 - Large Embed + Streaming Links
 * Full-width Spotify/YouTube embed with streaming buttons
 * Best for: All artist types, high conversion
 */

interface Props {
  releaseTitle: string;
  releaseType?: "album" | "single" | "ep";
  description?: string;
  spotifyEmbed?: string;
  coverImage?: string;
  streamingLinks?: {
    platform: string;
    url: string;
    icon?: string;
  }[];
}

const {
  releaseTitle,
  releaseType = "album",
  description,
  spotifyEmbed = "https://open.spotify.com/embed/album/4LH4d3cOWNNsVw41Gqt2kv",
  coverImage,
  streamingLinks = [
    { platform: "Spotify", url: "#" },
    { platform: "Apple Music", url: "#" },
    { platform: "YouTube Music", url: "#" },
    { platform: "Amazon Music", url: "#" },
    { platform: "Tidal", url: "#" },
  ],
} = Astro.props;

const platformIcons: Record<string, string> = {
  Spotify:
    "M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z",
  "Apple Music":
    "M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z",
  "YouTube Music":
    "M12 0C5.376 0 0 5.376 0 12s5.376 12 12 12 12-5.376 12-12S18.624 0 12 0zm0 19.104c-3.924 0-7.104-3.18-7.104-7.104S8.076 4.896 12 4.896s7.104 3.18 7.104 7.104-3.18 7.104-7.104 7.104zm0-13.332c-3.432 0-6.228 2.796-6.228 6.228S8.568 18.228 12 18.228 18.228 15.432 18.228 12 15.432 5.772 12 5.772zM9.684 15.54V8.46L15.816 12l-6.132 3.54z",
};
---

<section
  id="featured-release"
  class="section bg-gradient-to-b from-zinc-900 to-black"
>
  <div class="container-wide">
    <!-- Section header -->
    <div class="text-center mb-12">
      <span class="text-caption">Latest {releaseType.toUpperCase()}</span>
      <h2 class="heading-lg text-white mt-4">{releaseTitle}</h2>
      {
        description && (
          <p class="text-body text-zinc-400 max-w-2xl mx-auto mt-4">
            {description}
          </p>
        )
      }
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Spotify Embed -->
      <div class="relative">
        <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl">
          <iframe
            src={spotifyEmbed}
            width="100%"
            height="100%"
            frameborder="0"
            allowtransparency="true"
            allow="encrypted-media"
            loading="lazy"
            class="w-full h-full"></iframe>
        </div>

        <!-- Glow effect -->
        <div
          class="absolute -inset-4 bg-red-600/10 blur-3xl -z-10 rounded-full"
        >
        </div>
      </div>

      <!-- Streaming links -->
      <div>
        <h3 class="text-xl text-white font-semibold mb-6">Listen Now</h3>
        <div class="space-y-3">
          {
            streamingLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-4 p-4 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 transition-all group"
              >
                <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center group-hover:bg-white/20 transition-colors">
                  <svg
                    class="w-5 h-5 text-white"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path
                      d={
                        platformIcons[link.platform] ||
                        "M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                      }
                    />
                  </svg>
                </div>
                <span class="text-white font-medium flex-1">
                  {link.platform}
                </span>
                <svg
                  class="w-5 h-5 text-zinc-500 group-hover:text-white group-hover:translate-x-1 transition-all"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                  />
                </svg>
              </a>
            ))
          }
        </div>

        <!-- Pre-save CTA if applicable -->
        <div
          class="mt-8 p-6 rounded-xl bg-gradient-to-r from-red-600/20 to-red-900/20 border border-red-600/30"
        >
          <p class="text-white font-semibold mb-2">ðŸ”¥ Don't Miss Out</p>
          <p class="text-zinc-400 text-sm mb-4">
            Add to your library and be the first to hear new releases.
          </p>
          <button class="btn-primary w-full"> Add to Library </button>
        </div>
      </div>
    </div>
  </div>
</section>
