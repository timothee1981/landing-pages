---
/**
 * Contact3 - CTA Button
 * Simple button linking to external contact/booking
 * Best for: Quick landing pages, redirect to main site
 */

interface Props {
  title?: string;
  subtitle?: string;
  primaryCta?: { text: string; url: string };
  secondaryCta?: { text: string; url: string };
  contactOptions?: {
    label: string;
    value: string;
    type: "email" | "phone" | "link";
  }[];
}

const {
  title = "Let's Work Together",
  subtitle = "Available for bookings, collaborations, and press inquiries.",
  primaryCta = { text: "Book Now", url: "mailto:booking@artist.com" },
  secondaryCta = { text: "View Full Site", url: "https://artist.com" },
  contactOptions = [
    { label: "Booking", value: "booking@artist.com", type: "email" },
    { label: "Press", value: "press@artist.com", type: "email" },
    { label: "Management", value: "mgmt@artist.com", type: "email" },
  ],
} = Astro.props;

const getHref = (option: (typeof contactOptions)[0]) => {
  if (option.type === "email") return `mailto:${option.value}`;
  if (option.type === "phone") return `tel:${option.value}`;
  return option.value;
};
---

<section id="contact" class="section bg-black">
  <div class="container-narrow text-center">
    <!-- Icon/Visual -->
    <div class="mb-8">
      <div
        class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-theme-primary/20 to-theme-secondary/20 border border-theme-primary/30"
      >
        <svg
          class="w-10 h-10 text-theme-primary"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
          ></path>
        </svg>
      </div>
    </div>

    <h2 class="heading-lg text-white mb-4">{title}</h2>
    <p class="text-body text-zinc-400 max-w-lg mx-auto mb-10">{subtitle}</p>

    <!-- Primary CTAs -->
    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12"
    >
      <a href={primaryCta.url} class="btn-primary text-lg px-10 py-5">
        {primaryCta.text}
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>

      {
        secondaryCta && (
          <a href={secondaryCta.url} class="btn-secondary">
            {secondaryCta.text}
          </a>
        )
      }
    </div>

    <!-- Contact options grid -->
    <div class="grid sm:grid-cols-3 gap-4">
      {
        contactOptions.map((option) => (
          <a
            href={getHref(option)}
            class="group p-6 rounded-2xl bg-white/5 hover:bg-white/10 border border-white/10 transition-all"
          >
            <p class="text-zinc-500 text-sm mb-1">{option.label}</p>
            <p class="text-white font-medium group-hover:text-theme-primary transition-colors truncate">
              {option.value}
            </p>
          </a>
        ))
      }
    </div>

    <!-- Quick social links -->
    <div class="mt-12 pt-8 border-t border-zinc-800">
      <p class="text-zinc-500 text-sm mb-4">Or connect on social</p>
      <div class="flex items-center justify-center gap-4">
        <a
          href="#"
          class="w-10 h-10 rounded-full bg-white/5 hover:bg-white/10 flex items-center justify-center transition-colors"
        >
          <svg
            class="w-5 h-5 text-white"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path
              d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069z"
            ></path>
          </svg>
        </a>
        <a
