<section id="social" class="section-tight">
  <div class="container-narrow text-center">
    <h3 class="text-sm uppercase tracking-widest text-theme-primary mb-8">
      {title}
    </h3>

    <div class="flex items-center justify-center gap-4 sm:gap-6">
      {
        socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group w-12 h-12 sm:w-14 sm:h-14 rounded-full bg-white/5 hover:bg-white/10 border border-white/10 hover:border-theme-primary flex items-center justify-center transition-all hover:scale-110"
            aria-label={`Follow on ${link.platform}`}
          >
            <svg
              class="w-5 h-5 sm:w-6 sm:h-6 text-white/70 group-hover:text-theme-primary transition-colors"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d={icons[link.platform] || icons.spotify} />
            </svg>
          </a>
        ))
      }
    </div>
  </div>
</section>
